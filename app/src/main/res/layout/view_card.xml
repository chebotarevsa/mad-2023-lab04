<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ViewCard">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="204dp"
        android:layout_height="201dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/translateView"
        android:layout_width="152dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/translate"
        app:layout_constraintTop_toBottomOf="@+id/answerView" />

    <TextView
        android:id="@+id/questionField"
        android:layout_width="153dp"
        android:layout_height="94dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="52dp"
        android:background="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/question"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/exampleField"
        android:layout_width="153dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:background="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/example"
        app:layout_constraintTop_toBottomOf="@+id/questionField" />

    <TextView
        android:id="@+id/example"
        android:layout_width="74dp"
        android:layout_height="21dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="84dp"
        android:text="@string/Help"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question" />

    <TextView
        android:id="@+id/answerView"
        android:layout_width="154dp"
        android:layout_height="17dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:background="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/answer"
        app:layout_constraintTop_toBottomOf="@+id/exampleField" />

    <TextView
        android:id="@+id/question"
        android:layout_width="55dp"
        android:layout_height="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="52dp"
        android:text="@string/Question"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="46dp"
        android:layout_height="20dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="32dp"
        android:text="@string/Answer"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/example" />

    <TextView
        android:id="@+id/translate"
        android:layout_width="64dp"
        android:layout_height="20dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="@string/Translate"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer" />

    <ImageButton
        android:id="@+id/button"
        android:layout_width="63dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/edit"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.916"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>